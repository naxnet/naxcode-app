<p id="notice"><%= notice %></p>

<h1>Teachers in: <%= @course.name %> </h1>

<table  class="table table-striped">
  <thead>
    <tr>
      <th>
        Name
      </th>
      <th>
        dni
      </th>
      <th>
        email
      </th>
      <th colspan="1">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @professors.each do |professor| %>
      <tr>
        <td>
          <%= professor.name %>
        </td>
        <td>
          <%= professor.dni %>
        </td>
        <td>
          <%= professor.email %>
        </td>
        <td>
          <%= link_to [:professors, @course,  professor], method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" do %>
            <%= fa_icon('trash', type: :solid, text: ' Delete')  %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<h1>Teachers awaiting for approval </h1>
<table  class="table table-striped">
  <thead>
    <tr>
      <th>
        Name
      </th>
      <th>
        dni
      </th>
      <th>
        email
      </th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @professor_subscriptions_aw.each do |professor_subscription| %>
      <tr>
        <td>
          <%= professor_subscription.professor.name %>
        </td>
        <td>
          <%= professor_subscription.professor.dni %>
        </td>
        <td>
          <%= professor_subscription.professor.email %>
        </td>
        <td>
          <%= link_to approve_professors_course_professor_path(@course, professor_subscription.professor), class: "btn btn-outline-success" do %>
            <%= fa_icon('check', type: :solid, text: ' Approve')  %>
          <% end %>
        </td>
        <td>
          <%= link_to reject_professors_course_professor_path(@course, professor_subscription.professor), class: "btn btn-outline-danger" do %>
            <%= fa_icon('times', type: :solid, text: ' Reject')  %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br/>


