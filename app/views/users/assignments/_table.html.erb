<table  class="table table-striped">
  <thead>
    <tr>
      <th>
        Name
      </th>
      <th>
        Init Time
      </th>
      <th>
        End Time
      </th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% assignments.each do |assignment| %>
      <tr>
        <td>
          <%= assignment.name %>
        </td>
        <td>
          <%= assignment.init_time %>
        </td>
        <td>
          <%= assignment.end_time %>
        </td>
        <td>
          <%= link_to [:users, course, assignment], class: "btn btn-outline-warning" do %>
            <%= fa_icon('eye', type: :solid, text: ' Show')  %>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
